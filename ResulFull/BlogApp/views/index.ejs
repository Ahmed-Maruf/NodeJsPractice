
<% include ./partials/header%>

    <div class="ui main text container hold">
        <div class="ui huge header">Restful Blog app</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function (blog) { %>

                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image%>">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%=blog.created%></span>
                        </div>
                        <div class="description">
                            <P><%=blog.body.substring(0,100)%></P>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">Read More</a>
                        </div>
                    </div>

                </div>
                <%});%>

            </div>
        </div>
    </div>
<% include ./partials/footer%>